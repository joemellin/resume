%table.table.table-responsive
  %tbody
    - @paintings.each do |painting|
      %tr
        %td= link_to (image_tag painting.image.url(:thumb)), painting

        %td= link_to "#{painting.title}", painting
        %td= painting.inventory
        %td= painting.medium
        %td= painting.dimension
        %td= painting.year
        %td= painting.exhibition
        - if user_signed_in?
          %td= painting.current
        

