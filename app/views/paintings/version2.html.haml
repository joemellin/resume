.container
	.row

		- @paintings.each do |painting|
			.col-xs-2
				.div{:style => "height:140px;"}
					= link_to (image_tag painting.image.url(:medium)), painting

				.div{:style => "text-align:center"}= link_to "#{painting.title}", painting
				.div{:style => "text-align:center;font-size:.7em;"}= painting.year